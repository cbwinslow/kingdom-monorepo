{
  "name": "democratic_swarm",
  "description": "Multi-agent loop with planning, execution, QA, and consensus using weighted majority voting.",
  "phases": [
    "ingest_goals",
    "plan_tasks",
    "assign_and_execute",
    "peer_review",
    "consensus",
    "publish"
  ],
  "algorithms": {
    "routing": "capability_round_robin",
    "consensus": {
      "type": "weighted_majority",
      "weights": {
        "research_lead": 0.3,
        "builder": 0.4,
        "qa_chair": 0.3
      },
      "quorum": 0.66
    },
    "self_check": {
      "type": "tool_call",
      "tool": "vote",
      "retries": 2
    }
  },
  "autonomy": {
    "max_cycles": 6,
    "retry_policy": "backoff",
    "abort_on": ["blocked_dependencies", "irrecoverable_error"]
  }
}
