#!/bin/bash
# ============================================================================
# Bash Aliases
# ============================================================================
# Common bash aliases for productivity and convenience

# ============================================================================
# Navigation
# ============================================================================
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ~='cd ~'
alias -- -='cd -'

# ============================================================================
# List Files
# ============================================================================
alias ll='ls -lah'
alias la='ls -A'
alias l='ls -CF'
alias lt='ls -lahtr'  # Sort by modification time
alias lsize='ls -lhS' # Sort by size

# ============================================================================
# File Operations
# ============================================================================
alias cp='cp -i'      # Confirm before overwriting
alias mv='mv -i'      # Confirm before overwriting
alias rm='rm -i'      # Confirm before deleting
alias mkdir='mkdir -pv' # Create parent dirs and be verbose

# ============================================================================
# Grep
# ============================================================================
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# ============================================================================
# System
# ============================================================================
alias df='df -h'      # Human readable sizes
alias du='du -h'      # Human readable sizes
alias free='free -h'  # Human readable sizes
alias path='echo -e ${PATH//:/\\n}'  # Print PATH on separate lines
alias ports='netstat -tulanp'  # Show listening ports
alias myip='curl -s ifconfig.me' # Get public IP address

# ============================================================================
# Process Management
# ============================================================================
alias psg='ps aux | grep -v grep | grep -i -e VSZ -e' # Process grep
alias pscpu='ps aux | sort -nr -k 3 | head -10'  # Top CPU processes
alias psmem='ps aux | sort -nr -k 4 | head -10'  # Top memory processes

# ============================================================================
# Git Shortcuts
# ============================================================================
alias g='git'
alias gs='git status'
alias ga='git add'
alias gc='git commit'
alias gca='git commit -a'
alias gcm='git commit -m'
alias gp='git push'
alias gpl='git pull'
alias gd='git diff'
alias gdc='git diff --cached'
alias gl='git log --oneline --graph --decorate'
alias gb='git branch'
alias gco='git checkout'
alias gf='git fetch'
alias gr='git remote -v'

# ============================================================================
# Docker Shortcuts
# ============================================================================
alias d='docker'
alias dc='docker-compose'
alias dps='docker ps'
alias dpsa='docker ps -a'
alias di='docker images'
alias dex='docker exec -it'
alias dlog='docker logs -f'
alias dstop='docker stop $(docker ps -q)'
alias drm='docker rm $(docker ps -aq)'
alias drmi='docker rmi $(docker images -q)'

# ============================================================================
# Development
# ============================================================================
alias py='python3'
alias pip='pip3'
alias serve='python3 -m http.server'  # Quick HTTP server
alias jsonpp='python3 -m json.tool'   # Pretty print JSON

# ============================================================================
# Safety
# ============================================================================
alias wget='wget -c'  # Continue downloads by default

# ============================================================================
# Miscellaneous
# ============================================================================
alias h='history'
alias j='jobs -l'
alias c='clear'
alias cls='clear'
alias edit='$EDITOR'
alias svi='sudo vi'
alias vis='vim "+set si"'  # Edit with smart indent
alias now='date +"%Y-%m-%d %H:%M:%S"'
alias nowdate='date +"%Y-%m-%d"'
alias week='date +%V'
