# Common Environment Variables for Homelab Services
# Copy this file and customize for your environment

# ============================================
# GENERAL CONFIGURATION
# ============================================

# Timezone (use your local timezone)
TZ=America/New_York

# User and Group IDs (run 'id' command to get your values)
PUID=1000
PGID=1000

# Server Information
SERVER_HOSTNAME=homelab-server
SERVER_DOMAIN=homelab.local
SERVER_IP=192.168.1.100

# Email Configuration (for notifications and alerts)
ADMIN_EMAIL=admin@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ============================================
# SECURITY
# ============================================

# Default Admin Credentials (CHANGE THESE!)
DEFAULT_ADMIN_USER=admin
DEFAULT_ADMIN_PASS=changeme123

# SSL/TLS Configuration
ACME_EMAIL=admin@example.com
SSL_CERT_PATH=/etc/ssl/certs
SSL_KEY_PATH=/etc/ssl/private

# ============================================
# NETWORK CONFIGURATION
# ============================================

# Network Subnet for Docker
DOCKER_SUBNET=172.20.0.0/16

# DNS Servers
DNS_PRIMARY=1.1.1.1
DNS_SECONDARY=1.0.0.1

# Proxy Configuration
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# ============================================
# STORAGE PATHS
# ============================================

# Base directory for all data
DATA_ROOT=/mnt/homelab

# Media Directories
MEDIA_DIR=${DATA_ROOT}/media
MEDIA_DIR_TV=${MEDIA_DIR}/tv
MEDIA_DIR_MOVIES=${MEDIA_DIR}/movies
MEDIA_DIR_MUSIC=${MEDIA_DIR}/music
MEDIA_DIR_PHOTOS=${MEDIA_DIR}/photos

# Download Directory
DOWNLOAD_DIR=${DATA_ROOT}/downloads

# Backup Directory
BACKUP_DIR=${DATA_ROOT}/backups

# Configuration Directory
CONFIG_DIR=${DATA_ROOT}/config

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=homelab
POSTGRES_USER=homelab
POSTGRES_PASSWORD=changeme123

# MySQL/MariaDB
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_DATABASE=homelab
MYSQL_USER=homelab
MYSQL_PASSWORD=changeme123
MYSQL_ROOT_PASSWORD=changeme123

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# MONITORING CONFIGURATION
# ============================================

# Prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION_DAYS=15

# Grafana
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=changeme123

# Node Exporter
NODE_EXPORTER_PORT=9100

# ============================================
# APPLICATION-SPECIFIC
# ============================================

# Nextcloud
NEXTCLOUD_PORT=8080
NEXTCLOUD_ADMIN=admin
NEXTCLOUD_PASSWORD=changeme123
NEXTCLOUD_TRUSTED_DOMAINS=localhost 192.168.1.100

# Plex
PLEX_CLAIM=claim-xxxxxxxxxxxx
PLEX_PORT=32400

# Transmission
TRANSMISSION_PORT=9091
TRANSMISSION_USER=admin
TRANSMISSION_PASS=changeme123

# Pi-hole
PIHOLE_PORT=8081
PIHOLE_PASSWORD=changeme123

# Portainer
PORTAINER_HTTPS_PORT=9443
PORTAINER_HTTP_PORT=9000

# Home Assistant
HOMEASSISTANT_PORT=8123

# WireGuard
WIREGUARD_PORT=51820
WIREGUARD_SERVERURL=vpn.yourdomain.com
WIREGUARD_PEERS=5

# GitLab
GITLAB_HTTP_PORT=8080
GITLAB_HTTPS_PORT=8443
GITLAB_SSH_PORT=2222
GITLAB_ROOT_PASSWORD=changeme123

# Jenkins
JENKINS_PORT=8080

# ============================================
# FEATURE FLAGS
# ============================================

# Enable/Disable Features
ENABLE_MONITORING=true
ENABLE_BACKUPS=true
ENABLE_VPN=false
ENABLE_SSL=true

# ============================================
# ADVANCED CONFIGURATION
# ============================================

# Resource Limits
MAX_MEMORY=4g
MAX_CPUS=2

# Log Configuration
LOG_LEVEL=info
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3

# Update Settings
AUTO_UPDATE=false
UPDATE_SCHEDULE=0 2 * * 0

# ============================================
# NOTES
# ============================================

# 1. Copy this file to .env in your service directory
# 2. Update all passwords and sensitive information
# 3. Adjust paths to match your system
# 4. Remove variables you don't need
# 5. Never commit .env files to git!
