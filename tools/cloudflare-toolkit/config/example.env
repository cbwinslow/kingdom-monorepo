# Cloudflare API Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Authentication (choose one method)
# Method 1: API Token (Recommended)
CLOUDFLARE_API_TOKEN=your_api_token_here

# Method 2: API Key + Email (Legacy, not recommended)
# CLOUDFLARE_API_KEY=your_global_api_key
# CLOUDFLARE_EMAIL=your_email@example.com

# Account Information
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_ZONE_ID=your_zone_id_here

# Optional: Specific zone/domain settings
CLOUDFLARE_ZONE_NAME=example.com

# Optional: Default settings
DEFAULT_CACHE_TTL=3600
DEFAULT_BROWSER_TTL=14400
DEFAULT_SECURITY_LEVEL=medium

# Optional: Tunnel settings
TUNNEL_CONFIG_DIR=~/.cloudflared

# Optional: Worker settings
WORKERS_DEV=false
WORKERS_COMPATIBILITY_DATE=2024-01-01

# Optional: Pages settings
PAGES_BUILD_COMMAND=npm run build
PAGES_BUILD_OUTPUT_DIR=dist
PAGES_PRODUCTION_BRANCH=main

# Optional: Rate limiting defaults
RATE_LIMIT_THRESHOLD=100
RATE_LIMIT_PERIOD=60

# Optional: Logging
LOG_LEVEL=info
LOG_FILE=/var/log/cloudflare-toolkit.log

# Optional: Backup settings
BACKUP_DIR=/var/backups/cloudflare
BACKUP_RETENTION_DAYS=30
