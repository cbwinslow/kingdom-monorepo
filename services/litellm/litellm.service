[Unit]
Description=LiteLLM Proxy Service
Documentation=https://github.com/cbwinslow/kingdom-monorepo/tree/main/services/litellm
Requires=docker.service
After=docker.service network-online.target
Wants=network-online.target

[Service]
Type=oneshot
RemainAfterExit=yes

# Update this path to match your installation
WorkingDirectory=/home/your-username/kingdom-monorepo/services/litellm

# Commands to start and stop the service
ExecStart=/usr/bin/docker-compose up -d
ExecStop=/usr/bin/docker-compose down

# Restart policy
Restart=on-failure
RestartSec=10s

# Security settings
User=your-username
Group=your-username

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=litellm-proxy

[Install]
WantedBy=multi-user.target
