# LiteLLM Proxy Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# Authentication & Security
# ============================================================================
# Master key for admin access to the proxy
LITELLM_MASTER_KEY=sk-your-secret-master-key-here

# UI credentials for the web interface
LITELLM_UI_USERNAME=admin
LITELLM_UI_PASSWORD=your-secure-password-here

# ============================================================================
# Database Configuration
# ============================================================================
# PostgreSQL connection string for storing API keys and configuration
# Format: postgresql://username:password@host:port/database
LITELLM_DATABASE_URL=postgresql://litellm:litellm_password@localhost:5432/litellm

# ============================================================================
# API Keys for LLM Providers
# ============================================================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google Gemini
GEMINI_API_KEY=your-gemini-api-key-here

# ============================================================================
# Redis Configuration (for caching)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================================================
# Langfuse (Optional - for monitoring and observability)
# ============================================================================
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com

# ============================================================================
# Proxy Configuration
# ============================================================================
# Port for the proxy server
LITELLM_PORT=4000

# Host binding (use 0.0.0.0 for external access)
LITELLM_HOST=0.0.0.0

# ============================================================================
# Ollama Configuration (for local models)
# ============================================================================
OLLAMA_API_BASE=http://localhost:11434
